{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "lib": ["es2015"],
  "include": ["src"],
  "exclude": ["node_modules"]
}
